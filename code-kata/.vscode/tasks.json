{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/code-kata.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/code-kata.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": "test"
        }
    ]
}
